<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JavaBoost" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="BottomMenuStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/black</item>
        <item name="itemIconSize">30dp</item>
        <item name="itemRippleColor">@android:color/transparent</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="itemIconTint">@drawable/bottom_nav_icon_color_selector</item>
        <item name="itemTextColor">@drawable/bottom_nav_icon_color_selector</item>
    </style>

    <!-- Alert Dialog -->
    <style name="MyThemeOverlay.MaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Buttons -->
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>


    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
        <item name="rippleColor">@color/black</item>
    </style>

    <style name="NegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
        <item name="rippleColor">@color/black</item>
    </style>

    <!-- Edit text -->
    <style name="CustomTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="hintTextColor">@color/blue</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="boxStrokeColor">@drawable/selector_et</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxStrokeErrorColor">@color/red_light</item>
        <item name="errorTextColor">@color/red_light</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="CustomEditText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WhiteButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="BlueCornersButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/blue_btn_selector</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="backgroundTint">@color/black</item>
        <item name="strokeColor">@color/blue_btn_selector</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="tv16Bold">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="tv16BoldMultiLine">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv14Normal">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="tv14NormalMultiLine">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="customRatingBar" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="android:numStars">5</item>
        <item name="android:isIndicator">false</item>
        <item name="android:progressBackgroundTint">@color/gray</item>
        <item name="android:progressTint">@color/blue</item>
        <item name="android:secondaryProgressTint">@android:color/transparent</item>
        <item name="android:stepSize">0.5</item>
    </style>

    <style name="MRadioButton.Purple" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorAccent">@color/blue</item>
        <item name="colorControlHighlight">@color/blue</item>
        <item name="android:colorPressedHighlight">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorControlActivated">@color/blue</item>
    </style>

    <style name="MessagerEditText" >
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:maxLines">6</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:textColorHighlight">@color/blue_alpha</item>
        <item name="android:textCursorDrawable">@drawable/et_cursor</item>
    </style>
    <style name="console_dialog" parent="Theme.JavaBoost">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:scrollHorizontally">true</item>
    </style>
</resources>